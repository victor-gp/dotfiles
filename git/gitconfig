[user]
	name = victor-gp
	email = victor.gp.dev@gmail.com
[core]
	editor = nano -cS
	excludesFile = ~/.gitignore
[pager]
	log = less -+F -+X
	diff = delta | less -+F -+X
	show = delta | less -+F -+X
[alias]
	logo = log --oneline
	pushu = !git push --set-upstream origin $(git symbolic-ref --short HEAD)
	pushf = push --force-with-lease
	comma = commit --amend
[pull]
	rebase = true
[rebase]
	autoStash = true
	autoSquash = true
[diff]
	algorithm = histogram
[merge]
	ff = false
[interactive]
	diffFilter = delta --color-only
[delta]
	syntax-theme = Dracula
	line-numbers = true
	commit-decoration-style = bold yellow ul
	width = 96
