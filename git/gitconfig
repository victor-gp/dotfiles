[user]
	name = Víctor González Prieto
	email = victor.gp.dev@gmail.com
[core]
	editor = vim
	excludesFile = ~/.gitignore
[pager]
	log = LESS=R less
	diff = delta | LESS=R less
	show = delta | LESS=R less
[alias]
	logo = log --oneline
	pushu = !git push --set-upstream origin $(git symbolic-ref --short HEAD)
	pushf = push --force-with-lease
	comma = commit --amend
[pull]
	rebase = true
[rebase]
	autoStash = true
	autoSquash = true
[diff]
	algorithm = histogram
[merge]
	ff = false
[interactive]
	diffFilter = delta --color-only
[delta]
	syntax-theme = gruvbox-dark
	line-numbers = true
	commit-decoration-style = bold yellow ul
	width = 96
