{
    "workbench.startupEditor": "newUntitledFile",
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.editor.highlightModifiedTabs": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [100],
    "editor.fontFamily": "'Hack Nerd Font Mono', Hack, 'DejaVu Sans Mono', Menlo, 'Droid Sans Mono', monospace",
    "editor.fontSize": 13,
    "editor.wordWrap": "on",
    "editor.scrollBeyondLastLine": false,
    "editor.padding.bottom": 32,
    "workbench.colorTheme": "Night Owl (No Italics)",
    "editor.formatOnPaste": true,
    "sundial.sunrise": "8:00",
    "sundial.sunset": "18:00",
    "workbench.preferredDarkColorTheme": "Night Owl (No Italics)",
    "workbench.preferredLightColorTheme": "Chinolor Light",
    "explorer.autoReveal": false,
    "telemetry.enableTelemetry": false,
    "python.showStartPage": false,
    "workbench.editor.tabSizing": "shrink",
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "editor.cursorBlinking": "smooth",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.activeIconPack": "react",
    "workbench.tree.indent": 16,
    "workbench.list.horizontalScrolling": true,
    "todo-tree.general.tags": ["FIXME", "TODO", "TSK", "WTF", "NICE"],
    "todo-tree.regex.regexCaseSensitive": false,
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "todo-tree.highlights.defaultHighlight": {
        "type": "tag-and-comment",
        "foreground": "#000000",
        "iconColour": "#9370db",
    },
    "todo-tree.highlights.customHighlight": {
        // nice: less saturated colors? (nice, fixme, maybe tsk)
        "TODO": {
            "background": "#f0e68c",
            "rulerColour": "#bdb76b",
            "icon": "tasklist"
        },
        "NICE": {
            "background": "#008080",
            "foreground": "#f5f5f5",
            "icon": "gift"
        },
        // todo: phase wtf out
        "WTF": {
            "background": "#d2691e",
            "icon": "thumbsdown"
        },
        "TSK": {
            "background": "#d2691e",
            "icon": "thumbsdown"
        },
        "FIXME": {
            "background": "#dc143c",
            "icon": "alert"
        }
    },
    "todo-tree.tree": {
        "flat": true,
        "expanded": true,
        "hideTreeWhenEmpty": true,
        "hideIconsWhenGroupedByTag": true,
        "showScanModeButton": false,
    },
    "editor.autoIndent": "advanced",
    "python.formatting.autopep8Args": [
        "--max-line-length 10000"
    ],
    "window.openFilesInNewWindow": "default",
    "python.languageServer": "Pylance",
    "python.analysis.completeFunctionParens": true,
    "editor.tabSize": 4,
    "[markdown]": {
        "editor.tabSize": 2,
    },
    "[ruby]": {
        "editor.tabSize": 2,
    },
    "[scala]": {
        "editor.tabSize": 2,
    },
    "workbench.editor.untitled.hint": "hidden",
    "redhat.telemetry.enabled": false,
    "ruby.format": "rubocop",
    "ruby.intellisense": "rubyLocate",
    "ruby.lint": {
        "rubocop": false
    },
    "ruby.useBundler": true,
    "ruby.useLanguageServer": true,
}
