{
    "workbench.startupEditor": "newUntitledFile",
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.editor.highlightModifiedTabs": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [100],
    "editor.fontFamily": "'Hack Nerd Font Mono', Hack, 'DejaVu Sans Mono', Menlo, 'Droid Sans Mono', monospace",
    "editor.fontSize": 13,
    "editor.wordWrap": "on",
    "editor.scrollBeyondLastLine": false,
    "editor.padding.bottom": 32,
    "workbench.colorTheme": "Lucario",
    "editor.formatOnPaste": true,
    "explorer.autoReveal": false,
    "telemetry.telemetryLevel": "off",
    "workbench.editor.tabSizing": "shrink",
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "editor.cursorBlinking": "smooth",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.activeIconPack": "react",
    "workbench.tree.indent": 16,
    "workbench.list.horizontalScrolling": true,
    "todo-tree.general.tags": ["FIXME", "TODO", "TSK", "NIT", "NICE"],
    "todo-tree.regex.regexCaseSensitive": false,
    "todo-tree.regex.regex": "((//|#|--|<!--|;|/\\*)\\s*($TAGS)\\b|^\\s*- \\[ \\])",
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "todo-tree.highlights.defaultHighlight": {
        "type": "tag-and-comment",
        "foreground": "#000000",
        "iconColour": "#9370db",
    },
    "todo-tree.highlights.customHighlight": {
        // nice: less saturated colors? (nice, fixme, maybe tsk)
        "TODO": {
            "background": "#f0e68c",
            "rulerColour": "#bdb76b",
            "icon": "tasklist"
        },
        "NICE": { // = nice to have
            "background": "#008080",
            "foreground": "#f5f5f5",
            "icon": "light-bulb"
        },
        "TSK": { // = poor naming
            "background": "#d2691e",
            "icon": "thumbsdown"
        },
        "NIT": { // = nitpick
            "background": "#d2691e",
            "icon": "squirrel"
        },
        "FIXME": {
            "background": "#dc143c",
            "icon": "alert"
        }
    },
    "todo-tree.tree": {
        "flat": true,
        "expanded": true,
        "hideTreeWhenEmpty": true,
        "hideIconsWhenGroupedByTag": true,
        "showScanModeButton": false,
    },
    "editor.autoIndent": "advanced",
    "python.formatting.autopep8Args": [
        "--max-line-length 10000"
    ],
    "window.openFilesInNewWindow": "default",
    "python.languageServer": "Pylance",
    "python.analysis.completeFunctionParens": true,
    "editor.tabSize": 4,
    "[markdown][ruby][haskell][scala]": {
        "editor.tabSize": 2,
    },
    "[haskell]": {
        "editor.formatOnPaste": false,
    },
    "workbench.editor.untitled.hint": "hidden",
    "redhat.telemetry.enabled": false,
    "ruby.format": "rubocop",
    "ruby.intellisense": "rubyLocate",
    "ruby.lint": {
        "rubocop": false
    },
    "ruby.useBundler": true,
    "ruby.useLanguageServer": true,
    "python.analysis.typeCheckingMode": "basic",
    "editor.minimap.enabled": false,
    // "workbench.sideBar.location": "right",
    "window.openFoldersInNewWindow": "on",
    "scm.diffDecorationsGutterWidth": 2,
    "scm.diffDecorationsGutterPattern": {
        "modified": false
    },
    "markdownlint.config": {
        "MD026": false,
        "MD033": {
            "allowed_elements": [ "img" ]
        }
    },
    "workbench.colorCustomizations": {
        // disables highlighting matches of the token under the cursor in the ruler
        "editorOverviewRuler.selectionHighlightForeground": "#0000",
    },
    "files.associations": {
        "*.sublime-syntax": "yaml",
    },
    "emojisense.unicodeCompletionsEnabled": false,
    "vim.vimrc.enable": true,
    "vim.useSystemClipboard": true,
    "vim.whichwrap": "b,s,h,l,<,>,[,]",
    "vim.cursorStylePerMode.normal": "underline",
    "vim.cursorStylePerMode.replace": "line",
    "vim.timeout": 400, // ms
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["u"], "commands": ["undo"] },
        { "before": ["C-r"], "commands": ["redo"] },
    ],
    "vim.handleKeys": {
        "<C-d>": false,
        "<C-s>": false,
        "<C-z>": false,
        "<C-f>": false,
        "<C-w>": false,
        "<C-n>": false,
        "<C-b>": false,
        "<C-c>": false,
        "<C-x>": false,
        "<C-v>": false,
        "<C-j>": false,
    },
    "editor.bracketPairColorization.enabled": false,
    "material-icon-theme.files.associations": {
        "vgp-notes.md": "log",
        "vgp-notes.txt": "log",
    },
    "emmet.includeLanguages": {
        "njk": "html"
    },
    "[njk]": {
        "editor.tabSize": 2,
    },
    "[javascript][javascriptreact]": {
        "editor.bracketPairColorization.enabled": true,
    },
    "terminal.integrated.fontFamily": "'UbuntuMono Nerd Font Mono', monospace",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.scrollback": 5000,
    "themeSwitcher.themesList": "Lucario,Dracula,Night Owl (No Italics)",
    "window.titleBarStyle": "custom",
    "workbench.layoutControl.enabled": false,
    "git.enableStatusBarSync": false,
    "timeline.excludeSources": [
        "timeline.localHistory"
    ],
}
