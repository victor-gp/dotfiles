{
    "workbench.startupEditor": "newUntitledFile",
    "window.zoomLevel": 0,
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.editor.highlightModifiedTabs": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [80],
    "editor.fontFamily": "'Hack Nerd Font Mono', Hack, 'DejaVu Sans Mono', Menlo, 'Droid Sans Mono', monospace",
    "editor.fontSize": 13,
    "editor.wordWrap": "on",
    "editor.scrollBeyondLastLine": false,
    "editor.padding.bottom": 32,
    "workbench.colorTheme": "Night Owl",
    "editor.formatOnPaste": true,
    "sundial.sunrise": "10:00",
    "sundial.sunset": "17:30",
    "workbench.preferredDarkColorTheme": "Night Owl",
    "workbench.preferredLightColorTheme": "Solarized Light",
    "editor.tabSize": 3,
    "[python]": {
        "editor.tabSize": 4
    },
    "explorer.autoReveal": false,
    "telemetry.enableTelemetry": false,
    "python.showStartPage": false,
    "workbench.editor.tabSizing": "shrink",
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "editor.cursorBlinking": "smooth",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "todo-tree.tree.showScanModeButton": false,
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.activeIconPack": "react",
    "workbench.tree.indent": 16,
    "workbench.list.horizontalScrolling": true,
    "todo-tree.general.tags": ["TODO", "NICE", "WTF", "FIXME"],
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "todo-tree.highlights.defaultHighlight": {
        "type": "tag-and-comment",
        "foreground": "black",
        "iconColour": "white"
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "background": "khaki",
            "icon": "tasklist"
        },
        "NICE": {
            "background": "teal",
            "icon": "gift"
        },
        "WTF": {
            "background": "chocolate",
            "icon": "thumbsdown"
        },
        "FIXME": {
            "background": "crimson",
            "icon": "alert"
        }
    },
}
